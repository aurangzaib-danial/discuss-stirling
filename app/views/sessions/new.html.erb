<main id="signIn" class="container mt-3">


  <div class="d-grid mb-4 mt-5">
    <button type="button" class="btn btn-primary"><i class="bi bi-facebook"></i> Sign in with Facebook </button>
  </div>


  <%= form_with model: @user, url: sign_in_path, method: :post do |form| %>

    <%= content_tag :div, class: "mb-3 #{'has-validation' if @user.errors[:sign_in].present?}" do %>

      <%= form.label :email, class: "form-label" %>
      
      <%= form.email_field :email, class: "form-control #{ 'is-invalid' if @user.errors[:sign_in].present?}", required: true %>

      <% if @user.errors[:sign_in].present? %>
        <div class="invalid-feedback">
          <%= @user.errors[:sign_in].first %>
        </div>
      <% end %>

    <% end %>

    <div class="mb-4">
      <%= form.label :password, class: "form-label" %>
      <%= form.password_field :password, class: "form-control", required: true %>
    </div>

    <div class="d-grid">
      <%= form.submit 'Sign in', class: "btn btn-primary" %>
    </div>

  <% end %>


  <p class="mt-4">Don't have an account? <%= link_to 'Sign up', sign_up_path, class: "text-decoration-none" %></p>

</main>


